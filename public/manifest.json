{
  "manifest_version": 3,
  "name": "Bahá’í Text Cataloger",
  "version": "1.0",
  "description": "Overlay knowledge graphs onto Bahá’í documents",
  "permissions": [
    "cookies",
    "storage",
    "sidePanel",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "*://*.bahai.works/*",
    "*://digitalbahairesources.org/*",
    "http://localhost:3008/*"
  ],
  "background": {
    "service_worker": "src/service_worker/service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.bahai.works/*"
      ],
      "js": ["src/content/content.js"],
      "css": ["assets/index.css"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "side_panel.html"
  },
  "action": {
    "default_title": "Open RAG Librarian"
  }
}
